{
  "name": "tomoffice",
  "version": "1.0.0",
  "description": "store app selling office furnitures",
  "main": "server.js",
  "scripts": {
    "start": "node server",
    "server": "nodemon server",
    "server:prod": "NODE_ENV=production nodemon server.js",
    "debug": "ndb server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:prod": "concurrently \"npm run server:prod\" \"npm run client\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "author": "Tomasz Wirkus",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^1.3.2",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.2",
    "hpp": "^0.2.3",
    "html-to-text": "^5.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.8.11",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.6",
    "nodemailer-sendgrid": "^1.0.3",
    "pug": "^2.0.4",
    "react-reveal": "^1.2.2",
    "sharp": "^0.24.0",
    "slugify": "^1.3.6",
    "stripe": "^8.36.0",
    "uuid": "^7.0.3",
    "validator": "^12.2.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
